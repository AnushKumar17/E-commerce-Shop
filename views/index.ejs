<%- include('./partials/header') %>

<% if (error.length > 0) { %>
  <div class="absolute top-5 left-1/2 transform -translate-x-1/2 p-3 rounded-md bg-red-500 shadow-lg">
    <span class="inline-block mt-1 mb-1 text-white">
      <%= error %>
    </span>
  </div>
<% } %>

<div class="flex flex-col items-center bg-gray-100 min-h-screen">
  <!-- Page Header -->
  <h3 class="text-4xl text-center my-8">
    Welcome to <span class="text-blue-400 font-semibold">E-commerce</span>
  </h3>

  <!-- Forms Container -->
  <div class="w-full max-w-7xl flex justify-between bg-white shadow-lg rounded-lg p-8 gap-x-8">
    
    <!-- User Registration -->
    <div class="w-1/3 flex flex-col items-center">
      <h4 class="text-2xl mb-5 font-semibold">Create Your Account</h4>
      <form autocomplete="off" action="/users/register" method="post" class="w-full space-y-4">
        <input
          class="bg-zinc-100 block w-full px-4 py-2 border-[1px] rounded-md border-zinc-300 focus:outline-none focus:ring-2 focus:ring-blue-400"
          type="text" placeholder="Full Name" name="fullname">
        <input
          class="bg-zinc-100 block w-full px-4 py-2 border-[1px] rounded-md border-zinc-300 focus:outline-none focus:ring-2 focus:ring-blue-400"
          type="email" placeholder="Email" name="email">
        <input
          class="bg-zinc-100 block w-full px-4 py-2 border-[1px] rounded-md border-zinc-300 focus:outline-none focus:ring-2 focus:ring-blue-400"
          type="password" placeholder="Password" name="password">
        <input
          class="block w-full py-3 mt-2 bg-blue-500 text-white rounded-full cursor-pointer hover:bg-blue-600 transition"
          type="submit" value="Create My Account">
      </form>
    </div>

    <!-- User Login -->
    <div class="w-1/3 flex flex-col items-center">
      <h4 class="text-2xl mb-5 font-semibold">User login</h4>
      <form autocomplete="off" action="/users/login" method="post" class="w-full space-y-4">
        <input
          class="bg-zinc-100 block w-full px-4 py-2 border-[1px] rounded-md border-zinc-300 focus:outline-none focus:ring-2 focus:ring-blue-400"
          type="email" placeholder="Email" name="email">
        <input
          class="bg-zinc-100 block w-full px-4 py-2 border-[1px] rounded-md border-zinc-300 focus:outline-none focus:ring-2 focus:ring-blue-400"
          type="password" placeholder="Password" name="password">
        <input
          class="block w-full py-3 mt-2 bg-blue-500 text-white rounded-full cursor-pointer hover:bg-blue-600 transition"
          type="submit" value="Login">
      </form>
    </div>

    <!-- Owner Login -->
    <div class="w-1/3 flex flex-col items-center">
      <h4 class="text-2xl mb-5 font-semibold">Owner Login</h4>
      <form autocomplete="off" action="/owners/login" method="post" class="w-full space-y-4">
        <input
          class="bg-zinc-100 block w-full px-4 py-2 border-[1px] rounded-md border-zinc-300 focus:outline-none focus:ring-2 focus:ring-blue-400"
          type="email" placeholder="Email" name="email">
        <input
          class="bg-zinc-100 block w-full px-4 py-2 border-[1px] rounded-md border-zinc-300 focus:outline-none focus:ring-2 focus:ring-blue-400"
          type="password" placeholder="Password" name="password">
        <input
          class="block w-full py-3 mt-2 bg-blue-500 text-white rounded-full cursor-pointer hover:bg-blue-600 transition"
          type="submit" value="Owner Login">
      </form>
    </div>
  </div>
</div>

<%- include('./partials/footer') %>

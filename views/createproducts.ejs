

    <!DOCTYPE html>
    <html lang="en">
    
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>E-commerce</title>
        <link href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css" rel="stylesheet" />
        <script src="https://cdn.tailwindcss.com"></script>
    </head>
    
    <body class="font-['Helvetica_Now_Display'] bg-gray-100">
    
        <!-- Navigation Bar -->
        <nav class="w-full flex justify-between items-center px-6 py-4 bg-white shadow-md">
            <h3 class="text-3xl font-bold text-gray-800">E-commerce</h3>
    
            <% var loggedin = typeof loggedin !== "undefined" ? loggedin : true %>
            <% if(loggedin){ %>
                <div class="flex space-x-6">
                    <a href="/owners/admin" class=" text-lg text-green-700 hover:text-blue-500 transition">Add item to shop</a>
                    <a href="/users/logout" class=" text-lg text-red-600 hover:text-red-800 transition">Logout</a>
                </div>
            <% } %>
            
        </nav>
    
        <!-- Main Content -->
        <div class="min-h-screen flex flex-col">
            <div class="container px-10 py-20 flex flex-grow">
                <div class="w-60">
                    <!-- Product Image Section -->
                    <div class="w-full h-52 flex items-center justify-center bg-gray-900">
                        <!-- Placeholder Image -->
                        <img class="h-[12rem]" src="https://via.placeholder.com/150" alt="Product Image">
                    </div>
                
                    <!-- Product Details Section (Panel) -->
                    <div class="flex justify-between items-center bg-gray-500 p-6 rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-300">
                        <div class="space-y-2">
                            <!-- Product Name -->
                            <h3 class="text-xl font-extrabold text-white">
                                Product Name
                            </h3>
                            <!-- Product Price -->
                            <h4 class="text-lg font-semibold text-white">
                                Price
                            </h4>
                            <!-- Product Discount -->
                            <h4 class="text-sm font-medium text-white">
                                Discount
                            </h4>
                        </div>
                    </div>
                </div>
                
                
                <main class="w-3/4 bg-white p-8 shadow ml-4">
                    <h2 class="text-xl font-bold mb-4">Create New Product</h2>
                    <form autocomplete="off" action="/products/create" method="post" enctype="multipart/form-data">
                        <div class="mb-6">
                            <div class="mb-4">
                                <label class="block mb-2 font-medium">Product Image</label>
                                <input name="image" type="file" class="py-2 px-4 rounded" value="Select File">
                            </div>
                            <div class="grid grid-cols-2 gap-4">
                                <input name="name" type="text" placeholder="Product Name"
                                    class="border p-2 rounded w-full">
                                <input name="price" type="text" placeholder="Product Price"
                                    class="border p-2 rounded w-full">
                                <input name="discount" type="text" placeholder="Discount Price"
                                    class="border p-2 rounded w-full">
                            </div>
                        </div>

                        <div>
                            <h3 class="text-lg font-semibold mb-2">Panel Details</h3>
                            <div class="flex space-x-16 items-center">
                                <!-- Background Color -->
                                <div class="flex flex-col items-center">
                                    <label for="bgcolor" class="text-sm">Background Color</label>
                                    <input id="bgcolor" name="bgcolor" type="color" class="border p-2 rounded w-16 h-16">
                                </div>
                            
                                <!-- Panel Color -->
                                <div class="flex flex-col items-center">
                                    <label for="panelcolor" class="text-sm">Panel Color</label>
                                    <input id="panelcolor" name="panelcolor" type="color" class="border p-2 rounded w-16 h-16">
                                </div>
                            
                                <!-- Text Color -->
                                <div class="flex flex-col items-center">
                                    <label for="textcolor" class="text-sm">Text Color</label>
                                    <input id="textcolor" name="textcolor" type="color" class="border p-2 rounded w-16 h-16">
                                </div>
                            </div>
                            
                            
                        </div>
                        <input class="px-5 py-2 rounded mt-3 bg-blue-500 text-white" type="submit"
                            value="Create New Product">
                    </form>
                </main>
            </div>
        </div>
    
    </body>
    </html>
    
